@model BugTracker2020.Models.Ticket

@{
    ViewData["Title"] = "Delete";
}

<div class="p-5 h-100 rounded text-white" style="background: url(/assets/media/bg/bg-2.jpg); border-top-left-radius: 0 !important;">

  <h3 class="text-center">Are you sure you want to delete this ticket?</h3>
  <hr />
  <div class="card bg-dark-o-100 p-5 mb-3">
    <div class="row">
      <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.Title):
      </div>
      <div class="col-sm-10">
        @Html.DisplayFor(model => model.Title)
      </div>
      <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.Description):
      </div>
      <div class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
      </div>
      <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.Created):
      </div>
      <div class="col-sm-10">
        @Html.DisplayFor(model => model.Created)
      </div>
      <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.Updated):
      </div>
      <div class="col-sm-10">
        @Html.DisplayFor(model => model.Updated)
      </div>
      <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.Project):
      </div>
      <div class="col-sm-10">
        @Html.DisplayFor(model => model.Project.Name)
      </div>
      <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.TicketType):
      </div>
      <div class="col-sm-10">
        @Html.DisplayFor(model => model.TicketType.Name)
      </div>
      <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.TicketPriority):
      </div>
      <div class="col-sm-10">
        @Html.DisplayFor(model => model.TicketPriority.Name)
      </div>
      <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.TicketStatus):
      </div>
      <div class="col-sm-10">
        @Html.DisplayFor(model => model.TicketStatus.Name)
      </div>
      <div class="col-sm-2">
        Submitted By:
      </div>
      <div class="col-sm-10">
        @Html.DisplayFor(model => model.OwnerUser.FullName)
      </div>
      <div class="col-sm-2">
        Assigned Developer:
      </div>
      <div class="col-sm-10">
        @Html.DisplayFor(model => model.DeveloperUser.FullName)
      </div>
    </div>
  </div>
  <div class="text-center">
    <form asp-action="Delete">
      <input type="hidden" asp-for="Id" />
      <input type="submit" value="Delete" class="btn btn-danger" />
      <a asp-action="Index" class="btn btn-dark border">Back to List</a>
    </form>
  </div>
</div>