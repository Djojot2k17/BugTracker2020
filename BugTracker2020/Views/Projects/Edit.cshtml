@model BugTracker2020.Models.Project

@{
    ViewData["Title"] = "Edit";
}

<div class="container pt-3">
  <h1 class="text-center border-bottom-light rounded text-gray-200">Edit</h1>

  <h4 class="text-gray-200">@Model.Name</h4>
  <hr />
  <div class="row">
    <div class="col-md-4">
      <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
          <label asp-for="Name" class="control-label text-gray-200"></label>
          <input asp-for="Name" class="form-control" />
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        @*ADD IMAGE HANDLER*@
        <div class="form-group">
          <label asp-for="ImagePath" class="control-label text-gray-200"></label>
          <input asp-for="ImagePath" class="form-control" />
          <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="ImageData" class="control-label text-gray-200"></label>
          <input asp-for="ImageData" class="form-control" />
          <span asp-validation-for="ImageData" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input type="submit" value="Save" class="btn btn-dark border" />
          <a asp-action="Index" class="btn btn-dark border">Back to List</a>
        </div>
      </form>
    </div>
  </div>
  @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  }

</div>