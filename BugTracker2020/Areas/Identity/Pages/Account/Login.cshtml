@page
@model LoginModel

@{
  ViewData["Title"] = "Log in";
}


<div class="row" id="login">
  <div class="col">
    <section id="login-form" class="mx-auto">
      <form id="account" method="post">
        <h1 class="text-center">ClockWork <i class="fas fa-clock"></i></h1>
        <h4 class="text-center">Use a local account to log in.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
          <label asp-for="Input.Email"></label>
          <input asp-for="Input.Email" class="form-control" />
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Input.Password"></label>
          <input asp-for="Input.Password" class="form-control" />
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
          <div class="checkbox">
            <label asp-for="Input.RememberMe">
              <input asp-for="Input.RememberMe" />
              @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Log in</button>
        </div>
        <div class="form-group">
          <p>
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
          </p>
          <p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
          </p>
        </div>
      </form>
      <div class="w-50 mx-auto d-flex justify-content-around mt-3">

          <form method="post">
            <button type="submit" name="demoEmail" value="DemoAdminEmail" class="btn btn-dark border">Demo Admin</button>
          </form>
          <form method="post">
            <button type="submit" name="demoEmail" value="DemoPMEmail" class="btn btn-dark border">Demo PM</button>
          </form>
          <form method="post">
            <button type="submit" name="demoEmail" value="DemoDevEmail" class="btn btn-dark border">Demo Dev</button>
          </form>
          <form method="post">
            <button type="submit" name="demoEmail" value="DemoSubEmail" class="btn btn-dark border">Demo Sub</button>
          </form>
          <form method="post">
            <button type="submit" name="demoEmail" value="DemoNewUser" class="btn btn-dark border">Demo New</button>
          </form>

      </div>
    </section>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
